<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/homepage"
        android:gravity="center"
        android:textAlignment="center"
        android:textSize="20sp"
        android:padding="10sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <Button
            android:id="@+id/ex1_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ex1" />

        <Button
            android:id="@+id/ex2_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ex2" />

        <Button
            android:id="@+id/ex3_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ex3" />

        <Button
            android:id="@+id/ex4_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ex4" />

        <Button
            android:id="@+id/ex5_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ex5" />
    </LinearLayout>

</LinearLayout>